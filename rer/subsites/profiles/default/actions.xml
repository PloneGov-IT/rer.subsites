<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <object name="object_buttons" meta_type="CMF Action Category">
  <object name="mark-subsite" meta_type="CMF Action">
    <property name="title">Marca come sottosito</property>
    <property name="description" i18n:translate="">Marca la cartella come sottosito</property>
    <property name="url_expr">string:${object/absolute_url}/@@mark_subsite</property>
    <property name="icon_expr"/>
    <property name="available_expr">
      python: context.restrictedTraverse('@@check_subsite_action_add')()
    </property>
    <property name="permissions">
      <element value="Manage portal"/>
    </property>
    <property name="visible">True</property>
  </object>
  <object name="unmark-subsite" meta_type="CMF Action">
    <property name="title">Disabilita la cartella come sottosito</property>
    <property name="description" i18n:translate="">Disabilita questa cartella come sottosito</property>
    <property name="url_expr">
      string:${object/absolute_url}/@@unmark_subsite
    </property>
    <property name="icon_expr"/>
    <property name="available_expr">
      python: context.restrictedTraverse('@@check_subsite_action_remove')()
    </property>
    <property name="permissions">
      <element value="Manage portal"/>
    </property>
    <property name="visible">True</property>
  </object>
 </object>
</object>
