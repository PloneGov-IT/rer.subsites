<?xml version="1.0"?>
<!-- This file holds the setup configuration for the portal_skins tool -->

<object name="portal_skins" allow_any="False" cookie_persistence="False">

 <object name="subsites_stylesheets"
    meta_type="Filesystem Directory View"
    directory="rer.subsites:skins/subsites_stylesheets" remove="true" />

 <skin-path name="*">
  <layer name="subsites_stylesheets"
     insert-after="custom" remove="true" />
 </skin-path>

</object>
